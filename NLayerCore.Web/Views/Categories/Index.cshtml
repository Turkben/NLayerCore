@model IEnumerable<CategoryDto>
@{
    ViewData["Title"] = "Index";
}

<h1>Categories</h1>
<a asp-action="Create" class="btn btn-primary mb-3 mt-3">New Category</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td> @item.Id </td>
                <td> @item.Name </td>
                <td>
                    <a asp-action="Update" class="btn btn-sm btn-success" asp-route-id="@item.Id">Update</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" onclick="confirm('Are You Sure to Delete?')" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>

</table>